 @article{muthukrishna19dash,
 title={DASH: Deep Learning for the Automated Spectral Classification of Supernovae and Their Hosts}, volume={885}, DOI={10.3847/1538-4357/ab48f4}, abstractNote={We present DASH (Deep Automated Supernova and Host classifier), a novel 
software package that automates the classification of the type, age,
redshift, and host galaxy of supernova spectra. DASH makes use of a new
approach that does not rely on iterative template-matching techniques
like all previous software, but instead classifies based on the learned
