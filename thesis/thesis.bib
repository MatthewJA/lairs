	language = {en},
	author = {Fathony, Rizal and Behpour, Sima and Zhang, Xinhua and Ziebart, Brian D},
	pages = {10},
	file = {Fathony et al. - Efficient and Consistent Adversarial Bipartite Mat.pdf:C\:\\Users\\matthew\\Zotero\\storage\\X5BINXD9\\Fathony et al. - Efficient and Consistent Adversarial Bipartite Mat.pdf:application/pdf}
}

