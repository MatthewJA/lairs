	pages = {26},
	file = {IOP Full Text PDF:C\:\\Users\\matthew\\Zotero\\storage\\C2FGGCPR\\Helfand et al. - 2015 - THE LAST OFFIRST THE FINAL CATALOG AND SOURCE IDE.pdf:application/pdf}
